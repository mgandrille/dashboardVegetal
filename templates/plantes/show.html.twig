{% extends 'base.html.twig' %}

{% block title %}Plantes{% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}

        <h1>Plantes</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ plante.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ plante.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ plante.description }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>{{ plante.picture }}</td>
                </tr>
                <tr>
                    <th>Species</th>
                    <td>{{ plante.species }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ plante.createdAt ? plante.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <img class="mx-auto" src="{{ asset('../public/uploads/pictures/'~plante.picture) }}"><br>

        <a href="{{ path('plantes_index') }}">back to list</a>

        <a href="{{ path('plantes_edit', {'id': plante.id}) }}">edit</a>

        {{ include('plantes/_delete_form.html.twig') }}

    {% endif %}

{% endblock %}
